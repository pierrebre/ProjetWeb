{% extends 'base.html.twig' %}

{% block title %}Update{% endblock %}


{% block body %}

    {% if app.request.get('id') != app.user.id %}

        <meta http-equiv="refresh" content="1;url=../../register/{{ app.user.getId }}/edit"/>
        <div style="height: 55vh;">
            <h2 style="margin-top: 20px; margin-left: 20px;"><b>Vous n'êtes pas connecté avec cet identifiant.</b></h2>
            <p style="margin-left: 20px;">Redirection en cours...</p>
        </div>

    {% else %}
        <div class="registerForm">
            {{ form_start(updateForm) }}
                <h1 class="h3 mb-3 font-weight-normal" style="margin-top: -10px;"><i class="fas fa-edit"></i> <u>Modifier mon profil</u></h1>
                <br>
                <label>Identité :</label>
                <div style="margin-top: -25px">
                {{ form_row(updateForm.nom, {'label': ' '}) }}
                {{ form_row(updateForm.prenom, {'label': ' '}) }}
                </div>

                <div style="margin-top: -10px">
                {{ form_row(updateForm.email, {'label': 'Adresse Email :'}) }}
                </div>
                
                <div style="margin-top: 25px">
                {{ form_row(updateForm.plainPassword) }}
                </div>

                <button class="btn btn-primary">Modifier</button>
            {{ form_end(updateForm) }}
        </div>
    {% endif %}

    {% block javascripts %}
        <!-- header Bg -->
            <script>
                $(".navbar").removeClass("activeBgColorDevice");
                $(".navbar").addClass("activeBgColor");
            </script>
        <!-- End header Bg -->

        <!-- Scripts -->
            <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
        <!-- End Scripts -->
    {% endblock %}
{% endblock %}