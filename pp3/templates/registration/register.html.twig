{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}


{% block body %}

    <div class="registerForm">
    {{ form_start(registrationForm) }}
        <h1 class="h3 mb-3 font-weight-normal"><u>Inscrivez vous</u></h1>

        <label>Identité</label>
        <div style="margin-top: -25px;">
        {{ form_row(registrationForm.nom, {'label': ' '}) }}
        {{ form_row(registrationForm.prenom, {'label': ' '}) }}
        </div>

        <div style="margin-top: -10px">
        {{ form_row(registrationForm.email, {'label': 'Adresse Email'}) }}
        </div>
        
        <div style="margin-top: 25px">
        {{ form_row(registrationForm.plainPassword) }}
        </div>

        <button class="btn btn-primary">S'inscrire</button>
        <a href="login" style="margin-left: 10px;">Déjà inscrit ?</a>
    {{ form_end(registrationForm) }}
    </div>

    {% block javascripts %}
        <!-- header Bg -->
            <script>
                $(".navbar").removeClass("activeBgColorDevice");
                $(".navbar").addClass("activeBgColor");
            </script>
        <!-- End header Bg -->

        <!-- Scripts -->
            <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
        <!-- End Scripts -->
    {% endblock %}
{% endblock %}